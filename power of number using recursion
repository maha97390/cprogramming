//finding power of a number using recursion function
#include<stdio.h>
#include<conio.h>
int result=1;
void main()
{
    int b;
    int e;
    printf("Enter the base\n");
    scanf("%d",&b);
    printf("Enter the exponitial \n");
    scanf("%d",&e);
    printf("the result is %d\n",power(b,e));
}
int power(int m,int n)
{
        while(n==0)
    {
                return result;
    }
    result=result*m;
    power(m,n-1);
    return result;
}
