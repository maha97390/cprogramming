//finding sum of digits  using recursion function
#include<stdio.h>
#include<conio.h>
void main()
{
    int p;
    printf("Enter the number\n");
    scanf("%d",&p);
    printf("the sumof digit is of %d is %d\n",p,sumofdigits(p));
}
int sumofdigits(int n)
{
    int result=0;
    while(n==0)
    {
                return result;
    }
    result=n%10+sumofdigits(n/10);
    return result;
}
